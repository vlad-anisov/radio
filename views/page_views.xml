<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="page_about_form" model="ir.ui.view">
        <field name="name">page.about.form</field>
        <field name="model">page</field>
        <field name="arch" type="xml">
            <form>
                <div class="row">
                    <div class="col">
                        <h1>Radio app</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <h2>Version: 1.0.0</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-auto pe-0">
                        <h3>Author: Vlad Anisov</h3>
                    </div>
                    <div class="col ps-2">
                        <a href="https://www.instagram.com/anisov_vlad">
                           <span class="fa fa-lg fa-instagram"></span>
                         </a>
                    </div>
                </div>
            </form>
        </field>
    </record>

    <record id="page_about_action" model="ir.actions.act_window">
        <field name="name">О приложении</field>
        <field name="res_model">page</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="res_id">1</field>
    </record>

    <menuitem id="page_about_menu" name="О приложении" action="website.theme_install_kanban_action" sequence="100"
              parent="radio_root_menu"/>

</odoo>